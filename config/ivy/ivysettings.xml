<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>

	<properties file="ivysettings.properties" />

	<credentials host="${nexus.host}" realm="Sonatype Nexus Repository Manager" username="${nexus.user}" passwd="${nexus.password}" />

	<settings defaultResolver="default" circularDependencyStrategy="error" />
	<resolvers>
	
		<filesystem name="local">
			<ivy pattern="${ivy.local.dir}/${ivy.local.pattern}" />
			<artifact pattern="${ivy.local.dir}/${ivy.local.artifact.pattern}" />
		</filesystem>
		
		<url name="shared.release" m2compatible="true" checksums="">
			<artifact pattern="${nexus.release.url}/${nexus.artifact.pattern}" />
			<ivy pattern="${nexus.release.url}/${nexus.ivy.pattern}" />
		</url>

		<url name="shared.milestone" m2compatible="true" checksums="">
			<artifact pattern="${nexus.milestone.url}/${nexus.artifact.pattern}" />
			<ivy pattern="${nexus.milestone.url}/${nexus.ivy.pattern}" />
		</url>

	    <ibiblio name="nexus" m2compatible="true" root="${nexus.public.url}" />
		
		<chain name="default">
			<resolver ref="local" />
			<resolver ref="shared.release" />
			<resolver ref="shared.milestone" />
			<resolver ref="nexus" />
		</chain>
	</resolvers>

</ivysettings>